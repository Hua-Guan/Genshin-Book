<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_music"
        android:layout_width="128dp"
        android:layout_height="72dp"
        android:scaleType="fitXY"
        android:background="@drawable/fillet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_music_name"
        android:layout_width="128dp"
        android:layout_height="24dp"
        android:text="名字"
        app:layout_constraintStart_toStartOf="@+id/image_music"
        app:layout_constraintTop_toBottomOf="@+id/image_music" />

    <TextView
        android:id="@+id/text_music_author"
        android:layout_width="128dp"
        android:layout_height="24dp"
        android:text="作者"
        app:layout_constraintStart_toStartOf="@+id/text_music_name"
        app:layout_constraintTop_toBottomOf="@+id/text_music_name" />

</androidx.constraintlayout.widget.ConstraintLayout>