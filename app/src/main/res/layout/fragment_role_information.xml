<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/role_image"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/affiliation"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:text="所属"
        android:textSize="10sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/role_image"
        app:layout_constraintTop_toTopOf="@+id/role_image" />

    <TextView
        android:id="@+id/vision"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:text="神之眼"
        android:textSize="10sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/role_image"
        app:layout_constraintTop_toBottomOf="@+id/affiliation" />

    <TextView
        android:id="@+id/weapon_type"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:text="武器类型"
        android:textSize="10sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/role_image"
        app:layout_constraintTop_toBottomOf="@+id/vision" />

    <TextView
        android:id="@+id/constellation"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:text="命之座"
        android:textSize="10sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/role_image"
        app:layout_constraintTop_toBottomOf="@+id/weapon_type" />


</androidx.constraintlayout.widget.ConstraintLayout>