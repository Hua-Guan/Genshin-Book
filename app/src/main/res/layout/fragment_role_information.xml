<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/role_image"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fillet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/affiliation"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:text="所属"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/stroke_yellow"
        app:layout_constraintStart_toEndOf="@+id/role_image"
        app:layout_constraintTop_toTopOf="@+id/role_image" />

    <TextView
        android:id="@+id/vision"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:text="神之眼"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/stroke_yellow"
        app:layout_constraintStart_toEndOf="@+id/role_image"
        app:layout_constraintTop_toBottomOf="@+id/affiliation" />

    <TextView
        android:id="@+id/weapon_type"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:text="武器类型"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/stroke_yellow"
        app:layout_constraintStart_toEndOf="@+id/role_image"
        app:layout_constraintTop_toBottomOf="@+id/vision" />

    <TextView
        android:id="@+id/constellation"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:text="命之座"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/stroke_yellow"
        app:layout_constraintStart_toEndOf="@+id/role_image"
        app:layout_constraintTop_toBottomOf="@+id/weapon_type" />

    <TextView
        android:id="@+id/m_affiliation"
        android:layout_width="112dp"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:background="@drawable/stroke_light_yellow"
        app:layout_constraintStart_toEndOf="@+id/affiliation"
        app:layout_constraintTop_toTopOf="@+id/affiliation" />

    <TextView
        android:id="@+id/m_vision"
        android:layout_width="112dp"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:background="@drawable/stroke_light_yellow"
        app:layout_constraintStart_toEndOf="@+id/vision"
        app:layout_constraintTop_toBottomOf="@+id/m_affiliation" />

    <TextView
        android:id="@+id/m_weapon_type"
        android:layout_width="112dp"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:background="@drawable/stroke_light_yellow"
        app:layout_constraintStart_toEndOf="@+id/weapon_type"
        app:layout_constraintTop_toBottomOf="@+id/m_vision" />

    <TextView
        android:id="@+id/m_constellation"
        android:layout_width="112dp"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:background="@drawable/stroke_light_yellow"
        app:layout_constraintStart_toEndOf="@+id/constellation"
        app:layout_constraintTop_toBottomOf="@+id/m_weapon_type" />

    <TextView
        android:id="@+id/birthday"
        android:layout_width="112dp"
        android:layout_height="28dp"
        android:text="生日"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/stroke_yellow"
        app:layout_constraintStart_toStartOf="@+id/role_image"
        app:layout_constraintTop_toBottomOf="@+id/role_image" />

    <TextView
        android:id="@+id/m_birthday"
        android:layout_width="160dp"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:background="@drawable/stroke_light_yellow"
        app:layout_constraintStart_toEndOf="@+id/birthday"
        app:layout_constraintTop_toBottomOf="@+id/role_image" />

    <TextView
        android:id="@+id/title"
        android:layout_width="112dp"
        android:layout_height="28dp"
        android:text="称号"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/stroke_yellow"
        app:layout_constraintStart_toStartOf="@+id/birthday"
        app:layout_constraintTop_toBottomOf="@+id/birthday" />

    <TextView
        android:id="@+id/m_title"
        android:layout_width="160dp"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:background="@drawable/stroke_light_yellow"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/m_birthday" />

    <TextView
        android:id="@+id/introduction"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:text="角色介绍"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/stroke_yellow"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/m_introduction"
        android:layout_width="160dp"
        android:layout_height="112dp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:background="@drawable/stroke_light_yellow"
        app:layout_constraintStart_toEndOf="@+id/introduction"
        app:layout_constraintTop_toBottomOf="@+id/m_title" />


</androidx.constraintlayout.widget.ConstraintLayout>